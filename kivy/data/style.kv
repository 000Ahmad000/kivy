<Button>:
	canvas:
		Color:
			rgb: dict(down=(1, 1, 0), normal=(1, 1, 1))[root.state]
		BorderImage:
			pos: self.pos
			size: self.size
			source: 'data/images/button.png'
	Label:
		text: root.text
		font_size: 18
		canvas:
			Color:
				rgb: (1, 1, 1)
			Rectangle:
				texture: self.texture
				size: self.texture_size
				pos: center(self.texture_size, root.center)
