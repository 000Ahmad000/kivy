<Button>:
	canvas:
		Color:
			rgb: dict(down=(1, 1, 0), normal=(1, 1, 1))[root.state]
		BorderImage:
			pos: self.pos
			size: self.size
			source: 'data/images/button.png'
	Label:
		text: root.text
		font_size: 18
		canvas:
			Color:
				rgb: (1, 1, 1)
			Rectangle:
				texture: self.texture
				size: self.texture_size
				pos: root.center[0] - self.texture_size[0] / 2., root.center[1] - self.texture_size[1] / 2.


<Slider>:
    canvas:
        Color:
            rgb: (.3, .3, .3)
        Rectangle:
            pos: self.pos
            size: self.size   

        Color:
            rgb: (.7, .2, .5)
        Rectangle:
            pos: self.value_pos
            size: (20,self.height)
