<Button,ToggleButton>:
	canvas:
		Color:
			rgb: dict(down=(1, 1, 0), normal=(1, 1, 1))[root.state]
		BorderImage:
			pos: self.pos
			size: self.size
			source: 'data/images/button.png'
	+Label:
		text: root.text
		font_size: 12
		canvas:
			Color:
				rgb: (1, 1, 1)
			Rectangle:
				texture: self.texture
				size: self.texture_size
				pos: root.center[0] - self.texture_size[0] / 2., root.center[1] - self.texture_size[1] / 2.


<Slider>:
    canvas:
        Color:
            rgb: 1, 1, 1
		BorderImage:
			pos: self.pos
			size: self.size
			source: 'data/images/slider-background.png'
		BorderImage:
			pos: (self.value_pos[0] -10, self.value_pos[1])
			size: (20, self.height)
			source: 'data/images/button.png'

<Label>:
	canvas:
		Color:
			rgb: 1, 0, 0
		Rectangle:
			size: self.size
			pos: self.pos

		Color:
			rgb: 1, 1, 1
		Rectangle:
			texture: self.texture
			size: self.texture_size
			pos: self.center[0] - self.texture_size[0] / 2., self.center[1] - self.texture_size[1] / 2.
